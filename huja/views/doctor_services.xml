<odoo>
  <data>
   <record id="doctor_services_view_form" model="ir.ui.view">
        <field name="name">doctor_services_view_form</field>
        <field name="model">huja.doctor.services</field>
        <field name="arch" type="xml">
            <form string="doctor Services">
            <header>
                        <!-- Post -->
                    <button name="action_to_done" string="Done" class="oe_highlight"
                                type="object"   attrs="{'invisible': [('status','!=','draft')]}" />
                    <button name="action_to_cancel" string="Cancel" class="oe_highlight"
                                type="object" attrs="{'invisible': [('status','!=','draft')]}" />
                       
                    <field name="status" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="services_type"/>
                            <field name="department"/>
                            <field name="city"/>
                            <field name="amount"/>
                            <field name="phone"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <record id="doctor_services_view_tree" model="ir.ui.view">
            <field name="name">doctor_services_view_tree</field>
            <field name="model">huja.doctor.services</field>
            <field name="arch" type="xml">
                <tree string="doctor Services">
                        <field name="name"/>
                        <field name="services_type"/>
                        <field name="department"/>
                        <field name="city"/>
                        <field name="amount"/>
                        <field name="phone"/>
                </tree>
            </field>
        </record>
        <record id="doctor_services_action" model="ir.actions.act_window">
            <field name="name">doctor  Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">huja.doctor.services</field>
            <field name="view_mode">tree,form</field>
        </record>
       <!-- Top menu item -->



        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="doctor_services_menu" name="doctor"  parent="huja_menu_root" action="doctor_services_action" sequence="6"/>
  </data>
</odoo>